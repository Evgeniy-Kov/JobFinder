<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:layout_marginVertical="@dimen/dp_9">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        app:cardCornerRadius="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_vacancy_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/vacancy_cover_placeholder" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_vacancy_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:textAppearance="@style/FontYSDisplayMediumSize22Weight500"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@id/tv_place_of_work"
        app:layout_constraintStart_toEndOf="@id/card_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/vacancy_name" />

    <TextView
        android:id="@+id/tv_place_of_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/FontYSDisplayRegularSize16Weight400"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@id/tv_salary"
        app:layout_constraintStart_toStartOf="@id/tv_vacancy_name"
        app:layout_constraintTop_toBottomOf="@id/tv_vacancy_name"
        tools:text="@string/place_of_work" />

    <TextView
        android:id="@+id/tv_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/FontYSDisplayRegularSize16Weight400"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_vacancy_name"
        app:layout_constraintTop_toBottomOf="@id/tv_place_of_work"
        tools:text="@string/salary" />

</androidx.constraintlayout.widget.ConstraintLayout>
