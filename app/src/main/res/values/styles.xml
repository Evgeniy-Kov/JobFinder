<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentToolbarStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="titleTextAppearance">@style/FontYSDisplayMediumSize22Weight500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FragmentSubTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayBoldSize32Weight700</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FragmentMediumTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize22Weight500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FragmentRegularTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize16Weight400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TeamFragmentDevelopersTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize16Weight500</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:background">@drawable/search_edit_text_layout</item>
        <item name="android:hint">@string/enter_query</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_48</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize16Weight400</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="FavoritesErrorText">
        <item name="android:layout_marginStart">@dimen/dp_46</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_46</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize22Weight500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaceholderTextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize22Weight500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_12</item>
    </style>

    <style name="filter_text_action">
        <item name="endIconDrawable">@drawable/ic_arrow_forward</item>
        <item name="endIconTint">?attr/colorOnPrimary</item>
        <item name="endIconMode">custom</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize16Weight400</item>
        <item name="boxStrokeWidth">@dimen/dp_0</item>
        <item name="boxStrokeWidthFocused">@dimen/dp_0</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="filter_edit_text_action">
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize16Weight400</item>
        <item name="hintTextAppearance">@style/FontYSDisplayRegularSize12Weight400</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="accept_button">
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize16Weight500</item>
    </style>

    <style name="filter_salary">
        <item name="boxBackgroundColor">?attr/colorSecondary</item>
        <item name="android:focusable">true</item>
        <item name="android:contextClickable">true</item>
        <item name="hintTextAppearance">@style/FontYSDisplayRegularSize12Weight400</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="boxStrokeWidth">@dimen/dp_0</item>
        <item name="boxStrokeWidthFocused">@dimen/dp_0</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_12</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_12</item>
    </style>

    <style name="filter_salary_edit_text">
        <item name="hintTextAppearance">@style/FontYSDisplayRegularSize12Weight400</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="cursorColor">@color/blue</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize16Weight400</item>
        <item name="android:focusable">true</item>
        <item name="android:contextClickable">true</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="without_salary">
        <item name="icon">@drawable/ic_arrow_forward</item>
        <item name="iconGravity">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize16Weight400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    9

    <style name="reset_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize16Weight500</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>
